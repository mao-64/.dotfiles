#ize -5et hidden true
set color256 true
set drawbox true
set previewer ~/.config/lf/previewer.sh
set cleaner ~/.config/lf/clear_img.sh
set hidden true
set icons

# Custom Functions
cmd open ${{
    case $(file --mime-type "$f" -bL) in
        text/*|application/json) $EDITOR "$f";;
        *) xdg-open "$f" ;;
    esac
}}

cmd mkdir %{{
		  printf "Directory Name: "
		  read ans
		  mkdir $ans
}}

cmd mkfile %{{
		  printf "File Name"
		  read ans
		  touch $ans
}}

cmd next ${{
	cd "$f"
}}

cmd trash %trash-put $fx

cmd wallpaper ${{
	feh --bg-scale $f
}}


cmd mpv ${{
	mpv $f --loop-file=yes & disown
}}

cmd fav ${{
#	~/Scripts/hf.sh ~/Downloads/rips $f
	~/Downloads/rips/test/favorites.sh ~/Downloads/rips $f
}}

map <enter> open
#map e down
#map i up
#map n updir
#map o open

map sw wallpaper

map tp trash

map gc cd ~/.config
